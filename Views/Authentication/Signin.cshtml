@using ShoeShop.ViewModels.Authentication;
@model SigninViewModel;
@{
	ViewData["Title"] = "Sign in";
}

@section Styles {
	<link href="~/css/account.css" rel="stylesheet">
}

<main class="bg_gray" style="background-color: #F5F5F5">

	<div class="container margin_60">
        <div class="page_header" style="text-align: center; margin: 20px 0;">
            <h1 style="color: #007bff; font-weight: bold;">Đăng nhập</h1>
        </div>
        <!-- /page_header -->
        <div class="row justify-content-center" style="margin: 0;">
            <div class="col-xl-6 col-lg-6 col-md-8">
                <div class="box_account" style="background-color: #f9f9f9; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); padding: 20px;">
                    <h3 class="client" style="font-size: 1.5rem; color: #333; margin-bottom: 20px; text-align: center;">Đã có tài khoản</h3>
                    <form class="form_container" method="post" style="padding: 20px;">
                        <div class="row no-gutters" style="margin-bottom: 15px;">
                            <div class="col-lg-6 pr-lg-1" style="margin-bottom: 10px;">
                                <a href="#0" class="social_bt facebook" style="display: block; text-align: center; padding: 10px; background-color: #3b5998; color: white; border-radius: 5px; text-decoration: none;">
                                    Đăng nhập bằng Facebook
                                </a>
                            </div>
                            <div class="col-lg-6 pl-lg-1">
                                <a href="#0" class="social_bt google" style="display: block; text-align: center; padding: 10px; background-color: #db4437; color: white; border-radius: 5px; text-decoration: none;">
                                    Đăng nhập bằng Google
                                </a>
                            </div>
                        </div>
                        <div class="divider" style="text-align: center; margin: 20px 0; color: #aaa; font-weight: bold; position: relative;">
                            <span style="background: #f9f9f9; padding: 0 10px; position: relative; z-index: 1;">Hoặc</span>
                            <hr style="border: 0; height: 1px; background: #ccc; margin-top: -12px; position: absolute; width: 100%; top: 50%; left: 0;">
                        </div>
                        @if (TempData["Error"] != null)
                        {
                            <div class="col-md-12 alert alert-danger mt-3" style="color: #721c24; background-color: #f8d7da; border: 1px solid #f5c6cb; border-radius: 5px; padding: 10px; font-size: 14px;">
                                <span><b>Sorry!</b> - @TempData["Error"]</span>
                            </div>
                        }
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label asp-for="EmailAddress" class="form-label" style="font-weight: bold; color: #333;">Email</label>
                            <input asp-for="EmailAddress" class="form-control mb-1" placeholder="Nhập email"
                                   style="border: 1px solid #ddd; border-radius: 5px; padding: 10px; width: 100%; outline: none;">
                            <span asp-validation-for="EmailAddress" class="d-block text-danger mt-1" style="color: #dc3545; font-size: 14px;"></span>
                        </div>
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label asp-for="Password" class="form-label" style="font-weight: bold; color: #333;">Mật khẩu</label>
                            <input asp-for="Password" class="form-control mb-1" placeholder="Nhập mật khẩu"
                                   style="border: 1px solid #ddd; border-radius: 5px; padding: 10px; width: 100%; outline: none;">
                            <span asp-validation-for="Password" class="d-block text-danger mt-1" style="color: #dc3545; font-size: 14px;"></span>
                        </div>
                        <div class="clearfix" style="margin-bottom: 15px;">
                            <div class="checkboxes float-start" style="font-size: 14px;">
                                <label class="container_check" asp-for="RememberMe" style="color: #555;">
                                    <input type="checkbox" asp-for="RememberMe" style="margin-right: 10px;">
                                    Ghi nhớ tài khoản
                                </label>
                            </div>
                            <div class="float-end">
                                <a id="forgot" asp-action="ForgotPassword" asp-controller="Authentication" style="color: #007bff; text-decoration: none;">Quên mật khẩu?</a>
                            </div>
                        </div>
                        <div class="text-muted text-center mb-2" style="font-size: 14px; color: #555;">
                            Bạn chưa có tài khoản?
                            <a asp-controller="authentication" asp-action="register" style="color: #007bff; text-decoration: none;">Đăng ký</a>
                        </div>
                        <div class="text-center">
                            <input type="submit" value="Đăng nhập" class="btn_1 full-width"
                                   style="background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;">
                        </div>
                    </form>
                </div>
                <!-- /box_account -->
            </div>
        </div>

		<!-- /row -->
	</div>
	<!-- /container -->
</main>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}