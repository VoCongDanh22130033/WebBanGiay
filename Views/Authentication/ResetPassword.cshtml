@using ShoeShop.ViewModels.Authentication;
@model ResetPasswordViewModel;
@{
	ViewData["Title"] = "Reset Password";
}

@section Styles {
	<link href="~/css/account.css" rel="stylesheet">
}

<main class="bg_gray">

	<div class="container margin_60">
		<div class="page_header">
            <h1 class="text-center" style="color: #007bff; font-weight: bold;">Đặt lại mật khẩu</h1>
		</div>
		<!-- /page_header -->
		<div class="row justify-content-center">
			<div class="col-xl-6 col-lg-6 col-md-8">
                <div class="box_account" style="max-width: 500px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
                    <form class="form_container" asp-controller="Authentication" asp-action="ResetPassword" method="post" role="form" style="padding: 20px;">
                        @if (TempData["Error"] != null)
                        {
                            <div class="col-md-12 alert alert-danger mt-3" style="color: #721c24; background-color: #f8d7da; border: 1px solid #f5c6cb; border-radius: 5px; padding: 10px;">
                                <span><b>Sorry!</b> - @TempData["Error"]</span>
                            </div>
                        }
                        <input asp-for="Code" hidden />
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label asp-for="Email" class="form-label" style="font-weight: bold; color: #333;">Email</label>
                            <input asp-for="Email" class="form-control mb-1" placeholder="Nhập email"
                                   style="border: 1px solid #ddd; border-radius: 5px; padding: 10px; width: 100%; outline: none;">
                            <span asp-validation-for="Email" class="d-block text-danger mt-1" style="color: #dc3545; font-size: 14px;"></span>
                        </div>
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label asp-for="Password" class="form-label" style="font-weight: bold; color: #333;">Mật khẩu mới</label>
                            <input asp-for="Password" class="form-control mb-1" placeholder="Nhập mật khẩu mới"
                                   style="border: 1px solid #ddd; border-radius: 5px; padding: 10px; width: 100%; outline: none;">
                            <span asp-validation-for="Password" class="d-block text-danger mt-1" style="color: #dc3545; font-size: 14px;"></span>
                        </div>
                        <div class="form-group" style="margin-bottom: 15px;">
                            <label asp-for="ConfirmPassword" class="form-label" style="font-weight: bold; color: #333;">Xác nhận mật khẩu</label>
                            <input asp-for="ConfirmPassword" class="form-control mb-1" placeholder="Nhập mật khẩu mới"
                                   style="border: 1px solid #ddd; border-radius: 5px; padding: 10px; width: 100%; outline: none;">
                            <span asp-validation-for="ConfirmPassword" class="d-block text-danger mt-1" style="color: #dc3545; font-size: 14px;"></span>
                        </div>
                        <div class="text-center">
                            <input type="submit" value="Change Password" class="btn_1 full-width"
                                   style="background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px;">
                        </div>
                    </form>
                </div>

				<!-- /row -->
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</main>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
